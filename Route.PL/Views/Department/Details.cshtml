@model Department
@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1>Details</h1>
    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label asp-for="@Model.Id" class="form-label">Id</label>
            <input asp-for="@Model.Id" type="text" class="form-control" readonly>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Code" class="form-label">Code</label>
            <input asp-for="@Model.Code" type="text" class="form-control" readonly>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.Name" class="form-label">Name</label>
            <input asp-for="@Model.Name" type="text" class="form-control" readonly>
        </div>
        <div class="form-group mb-3">
            <label asp-for="@Model.DateOfCreation" class="form-label">Date Of Creation</label>
            <input asp-for="@Model.DateOfCreation" type="date" class="form-control" readonly>
        </div>
        <a class="btn btn-warning" asp-action="Update" asp-route-id="@Model.Id">Update</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        <a class="btn btn-outline-secondary" asp-action="Index">Go Back</a>

    </form>
</div>

