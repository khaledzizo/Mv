@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <h1>All Employees</h1>

    <form class="my-3" asp-controller="Employee" asp-action="Index">
        <div class="row">
            <div class="col-sm-8">
                <input class="form-control" name="searchValue" placeholder="Search By Name" />
            </div>
            <div class="col-sm-4">
                <input class="btn btn-success btn-block" type="submit" value="Search" />
            </div>
        </div>
    </form>

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(dept => dept.Name)</th>
                    <th>@Html.DisplayNameFor(dept => dept.Email)</th>
                    <th>@Html.DisplayNameFor(dept => dept.HireDate)</th>
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.HireDate.Day-@item.HireDate.Month-@item.HireDate.Year</td>
                        <td><a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                        <td><a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                        <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <div class="alert alert-warning">
            <h3>No Employees Found!</h3>
        </div>
    }
    <a class="btn btn-success" asp-action="Create">Create New Employee</a>
</div>

